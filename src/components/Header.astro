---
import ThemeToggle from './ThemeToggle.astro';

const links = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '#about' },
  { name: 'Skills', href: '#skills' },
  { name: 'Contact', href: '#contact' },
];
---
<header class="mb-14 md:mb-20 flex items-center justify-between sticky top-0 z-50 py-6 bg-white/80 dark:bg-[#0a0a0a]/80 backdrop-blur-md -mx-6 px-6 border-b border-neutral-200 dark:border-white/5 transition-colors duration-300">
  <a href="/" class="font-bold text-lg tracking-tight text-neutral-900 dark:text-white hover:text-neutral-600 dark:hover:text-neutral-200 transition-colors">
    ioannislo
  </a>
  <div class="flex items-center gap-6">
    <nav>
      <ul class="flex gap-6 text-sm font-medium text-neutral-600 dark:text-neutral-400">
        {links.map(link => (
          <li>
            <a href={link.href} class="hover:text-neutral-900 dark:hover:text-white transition-colors">
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <ThemeToggle />
  </div>
</header>

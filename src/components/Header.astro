---
const links = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '#about' },
  { name: 'Skills', href: '#skills' },
  { name: 'Contact', href: '#contact' },
];
---
<header class="mb-14 md:mb-20 flex items-center justify-between sticky top-0 z-50 py-6 bg-[#0a0a0a]/80 backdrop-blur-md -mx-6 px-6 border-b border-white/5">
  <a href="/" class="font-bold text-lg tracking-tight text-white hover:text-neutral-200 transition-colors">
    ioannislo
  </a>
  <nav>
    <ul class="flex gap-6 text-sm font-medium text-neutral-400">
      {links.map(link => (
        <li>
          <a href={link.href} class="hover:text-white transition-colors">
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

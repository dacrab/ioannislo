---
// Hero section component
---

<section id="home" class="section section-hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="text-mega hero-title">
        <span class="text-glitch" data-text="BRUTAL">BRUTAL</span>
        <br>
        <span class="text-outline">DEVELOPER</span>
      </h1>
      
      <p class="text-body hero-subtitle">
        Junior developer passionate about creating clean, functional web experiences. 
        Learning, building, and growing one project at a time.
      </p>
      
      <div class="hero-cta">
        <a href="/IOANNIS_LOUGIAKIS_CV.pdf" download="IOANNIS_LOUGIAKIS_CV.pdf" class="brutal-button">
          DOWNLOAD CV
        </a>
        <a href="#contact" class="brutal-button secondary">
          GET IN TOUCH
        </a>
      </div>
      
      <!-- Floating elements for visual interest -->
      <div class="hero-decorations">
        <div class="decoration decoration-1"></div>
        <div class="decoration decoration-2"></div>
        <div class="decoration decoration-3"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-decorations {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: -1;
  }
  
  .decoration {
    position: absolute;
    border: var(--border-thick) solid var(--fg);
  }
  
  .decoration-1 {
    width: 100px;
    height: 100px;
    background: var(--accent);
    top: 20%;
    left: 10%;
    animation: float 4s ease-in-out infinite;
    transform: rotate(45deg);
  }
  
  .decoration-2 {
    width: 60px;
    height: 200px;
    background: var(--secondary);
    top: 60%;
    right: 15%;
    animation: float 3s ease-in-out infinite reverse;
    transform: rotate(-15deg);
  }
  
  .decoration-3 {
    width: 150px;
    height: 80px;
    background: var(--tertiary);
    bottom: 20%;
    left: 20%;
    animation: float 5s ease-in-out infinite;
    transform: rotate(30deg);
  }
  
  @media (max-width: 768px) {
    .decoration {
      display: none;
    }
  }
</style>

<script>
  // Add entrance animations
  const heroElements = document.querySelectorAll('.hero-content > *');
  
  heroElements.forEach((el, index) => {
    el.style.opacity = '0';
    el.style.transform = 'translateY(50px)';
    
    setTimeout(() => {
      el.style.transition = 'all 0.8s ease';
      el.style.opacity = '1';
      el.style.transform = 'translateY(0)';
    }, index * 200);
  });
</script>